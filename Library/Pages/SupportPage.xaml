<Page x:Class="Library.Pages.SupportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SupportPage">

    <Border
        Margin="25 10 25 20"
        Background="White" x:Name="border" CornerRadius="10" Focusable="True"            
        FocusVisualStyle="{x:Null}" >
        <Grid>
            
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Контактная информация" FontSize="35"
                       Margin="0 0 0 60"
                       HorizontalAlignment="Center"/>

            
            <StackPanel Orientation="Horizontal">

                <fa:IconImage x:Name="iconPhone" Panel.ZIndex="1" Icon="Whatsapp"
                          HorizontalAlignment="Left"
                          Foreground="Gray" Margin="13 0 0 0"/>
                <TextBlock Text="Телефон:                     +7 953 095 59 10" FontSize="20" Margin="10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">

                <fa:IconImage x:Name="iconName" Panel.ZIndex="1" Icon="AddressCard"
                          HorizontalAlignment="Left"
                          Foreground="Gray" Margin="13 0 0 0"/>
                <TextBlock Text="ФИО:                          Мизяк Кирилл Геннадьевич" Margin="10" FontSize="20"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">

                <fa:IconImage x:Name="iconPohta" Panel.ZIndex="1" Icon="EnvelopeOpenText"
                          HorizontalAlignment="Left"
                          Foreground="Gray" Margin="13 0 0 0"/>
                <TextBlock Text="Почта:                        mizyak.k@mail.ru" FontSize="20" Margin="10"/>
            </StackPanel>
            
            
            <StackPanel Orientation="Horizontal">

                <fa:IconImage x:Name="iconSait" Panel.ZIndex="1" Icon="GlobeAmericas"
                          HorizontalAlignment="Left"
                          Foreground="Gray" Margin="13 0 0 0"/>
                <TextBlock Text="Сайт:                       " FontSize="20" Margin="10"/>
                

                <TextBlock Margin="10">
                     <Underline Foreground="blue">
                        <Run Text="https://vk.com/skorpion1111111" Foreground="blue" FontSize="20"/>
                    </Underline>
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">

                <fa:IconImage x:Name="iconAdres" Panel.ZIndex="1" Icon="MapMarkerAlt"
                          HorizontalAlignment="Left"
                          Foreground="Gray" Margin="13 0 0 0"/>
                <TextBlock Text="Адрес:                        ул. Кадетская д. 9  г. Краснодар" FontSize="20" Margin="10"/>

            </StackPanel>


            <StackPanel Orientation="Horizontal">

                <fa:IconImage x:Name="iconTimeRabota" Panel.ZIndex="1" Icon="Stopwatch"
                          HorizontalAlignment="Left"
                          Foreground="Gray" Margin="13 0 0 0"/>
                <TextBlock Text="Часы работы:                Пн-Пт с 8:00-17:00" FontSize="20" Margin="10"/>
            </StackPanel>

        </StackPanel>
            <TextBlock Text="Версия ПО: Beta v.1.0" Margin="0 0 0 10"
                       
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" >
                <TextBlock.ToolTip>
                    <ToolTip Width="150" Content="Версия программы"/>
                </TextBlock.ToolTip>
            </TextBlock>
        </Grid>
    </Border>
</Page>
