                 Margin="70 40 0 0" Style="{StaticResource btnChekTecher}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="Ad" Margin="0" Height="20" Style="{StaticResource fa:IconImage}" />

                    <TextBlock Text="Добавить учителя" Style="{StaticResource menuButtonText}"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnDeleteTeachers" Click="btnDeleteAll_Click" HorizontalAlignment="Right"
