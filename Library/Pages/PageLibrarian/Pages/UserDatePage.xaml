                        <Button.ToolTip >
                            <TextBlock Width="auto" Margin="10 0 10 0" Text="Следующая страница"/>
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </Grid>
            <Button x:Name="btnAdTeachers" HorizontalAlignment="Left"
