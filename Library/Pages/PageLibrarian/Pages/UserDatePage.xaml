                    <TextBlock Text="Удалить учителя" Style="{StaticResource menuButtonText}"/>
                </StackPanel>
            </Button>


            <WrapPanel Orientation="Horizontal"                   
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   Width="auto"
                   Margin="105 0 0 0"
                   Height="auto">

                <TextBox Style="{StaticResource tbPoiskStyle}" TextChanged="tbPoisk_TextChanged" 
