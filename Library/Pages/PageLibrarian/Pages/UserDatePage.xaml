                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>

                    <Border  x:Name="borderImageTeachers"
                             Visibility="Collapsed"                     
                             CornerRadius="10" Background="Transparent" >
