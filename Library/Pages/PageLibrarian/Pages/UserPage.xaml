<Page x:Class="Library.Pages.PageLibrarian.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"           
      mc:Ignorable="d"       
      xmlns:uc="clr-namespace:Library.UserControls"     
      Title="MainPageTeacher">


    <WrapPanel Width="auto" HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center" Margin="24 0 0 0">

        <Button x:Name="btnShoolBooy" Width="500" Style="{StaticResource btnContentMenu}"
                    Click="btnShoolBooy_Click"
                    HorizontalAlignment="Stretch" Margin="0 0 0 30"
                    Height="150">
            <uc:InfoBook                       
                     Number="Ученики"
                     Icon="BookReader"                    
                     Background1="#827bff"
                     Background2="#d9b5ff"
                     EllipsBackground1="#b298fd" EllipsBackground2="#e4bbff" />
        </Button>



        <Button x:Name="btnTeachers" Width="500" HorizontalAlignment="Stretch" Style="{StaticResource btnContentMenu}"
                    Click="btnTeachers_Click" Margin="0 0 0 30"
                     Height="150" >
            <uc:InfoBook
                         Number="Учителя"
                         Icon="ChalkboardTeacher"                        
                         Background1="#fd8a87"
                         Background2="#f3ab92"
                         EllipsBackground1="#fbd5a8"
                         EllipsBackground2="#fdb89b"/>
        </Button>


        <Button x:Name="btnLibrarian" Width="500" HorizontalAlignment="Stretch" Style="{StaticResource btnContentMenu}"
                    Click="btnLibrarian_Click" Margin="0 0 0 30"
                     Height="150" >
            <uc:InfoBook
                         Number="Библиотекарь"
                         Icon="UserTie"                        
                         Background1="#1E90FF"
                         Background2="#4169E1"
                         EllipsBackground1="#00BFFF"
                         EllipsBackground2="#1E90FF"/>
        </Button>
    </WrapPanel>
</Page>


