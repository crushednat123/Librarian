<Page x:Class="Library.Pages.PageStudent.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     xmlns:uc="clr-namespace:Library.UserControls"
      mc:Ignorable="d"       
      Title="test">

    <Grid>
      
        <WrapPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center" Margin="24 0 0 0">
        <StackPanel Margin="20" >
            <Button x:Name="btnBooks" Width="500" Style="{StaticResource btnContentMenu}"  
                    Height="150" Click="btnBooks_Click">
                <uc:InfoBook           
                     Number="Книги"
                     Icon="BookOpen"                     
                     Background1="#827bff"
                     Background2="#d9b5ff"
                     EllipsBackground1="#b298fd" EllipsBackground2="#e4bbff" />
            </Button>
        </StackPanel>
        
        <StackPanel Margin="20">
            <Button x:Name="btnBookMe" Width="500"  Style="{StaticResource btnContentMenu}"
                    Height="150" Click="btnBookMe_Click">
                <uc:InfoBook
                         Number="Мои книги"
                         Icon="Book"                         
                         Background1="#fd8a87"
                         Background2="#f3ab92"
                         EllipsBackground1="#fbd5a8"
                         EllipsBackground2="#fdb89b"/>
            </Button>
        </StackPanel>
        
        
    </WrapPanel>
    </Grid>
</Page>
