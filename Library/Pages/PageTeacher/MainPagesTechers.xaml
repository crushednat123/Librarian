<Page x:Class="Library.Pages.PageTeacher.MainPagesTechers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"       
      mc:Ignorable="d" 
      xmlns:uc="clr-namespace:Library.UserControls"          
      Title="MainPagesTechers">

    <WrapPanel Width="auto" HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center" Margin="24 0 0 0">

        <Button x:Name="btnBooks" Width="500" Style="{StaticResource btnContentMenu}"
                    Click="btnBooks_Click"
                    HorizontalAlignment="Stretch" Margin="0 0 0 30"
                    Height="150">
            <uc:InfoBook                       
                     Number="Книги"
                     Icon="BookOpen"                    
                     Background1="#827bff"
                     Background2="#d9b5ff"
                     EllipsBackground1="#b298fd" EllipsBackground2="#e4bbff" />
        </Button>



        <Button x:Name="btnBookMe" Width="500" HorizontalAlignment="Stretch" Style="{StaticResource btnContentMenu}"
                    Click="btnBookMe_Click" Margin="0 0 0 30"
                     Height="150" >
            <uc:InfoBook
                         Number="Мои книги"
                         Icon="Book"                        
                         Background1="#fd8a87"
                         Background2="#f3ab92"
                         EllipsBackground1="#fbd5a8"
                         EllipsBackground2="#fdb89b"/>
        </Button>


        <Button x:Name="btnMyClasses" Width="500" HorizontalAlignment="Stretch" Style="{StaticResource btnContentMenu}"
                    Click="btnMyClasses_Click" Margin="0 0 0 30"
                     Height="150" >
            <uc:InfoBook
                         Number="Мой класс"
                         Icon="Users"                        
                         Background1="#1E90FF"
                         Background2="#4169E1"
                         EllipsBackground1="#00BFFF"
                         EllipsBackground2="#1E90FF"/>
        </Button>
    </WrapPanel>
</Page>
