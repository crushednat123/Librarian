<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Стиль грида проверяющий роль -->
    <Style TargetType="Grid" x:Key="checkRole">
      
        <Setter Property="Width" Value="30"/>
       
        <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=tbRole, Path=Text}"
                        Value="4">
                <Setter Property="Visibility" Value="Collapsed"/>

            </DataTrigger>

            <DataTrigger Binding="{Binding ElementName=tbRole, Path=Text}"
                         Value="3">
                <Setter Property="Visibility" Value="Visible"/>

            </DataTrigger>

            <DataTrigger Binding="{Binding ElementName=tbRole, Path=Text}"
                         Value="2">
                <Setter Property="Visibility" Value="Visible"/>

            </DataTrigger>
            <DataTrigger Binding="{Binding ElementName=tbRole, Path=Text}"
                         Value="1">
                <Setter Property="Visibility" Value="Visible"/>

            </DataTrigger>
        </Style.Triggers>
    </Style>


    <!--Стиль грида проверяющий роль -->
    <Style TargetType="Grid" x:Key="checkRoleTeacher">

        <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=tbRole, Path=Text}"
                         Value="3">
                <!--Учитель-->                
                <Setter Property="Margin" Value="0 150 0 0"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding ElementName=tbRole, Path=Text}"
                         Value="2">
                <!--Библиотекарь-->
                <Setter Property="Margin" Value="0 390 0 0"/>

            </DataTrigger>
        </Style.Triggers>
    </Style>


    <Style TargetType="Grid" x:Key="checkRolePage">
        <Style.Triggers>
           
            <DataTrigger Binding="{Binding ElementName=tbRole, Path=Text}"
                         Value="3">
                <!--Учитель-->
                <Setter Property="Grid.ColumnSpan" Value="2"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding ElementName=tbRole, Path=Text}"
                         Value="2">
                <!--Библиотекарь-->
                <Setter Property="Grid.ColumnSpan" Value="1"/>

            </DataTrigger>
                   
        </Style.Triggers>
    </Style>


    <Style TargetType="Grid" x:Key="checkRolePageLib">
        <Style.Triggers>

            <DataTrigger Binding="{Binding ElementName=tbRole, Path=Text}"
                         Value="3">

                <!--Учитель-->
                <Setter Property="Visibility" Value="Collapsed"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding ElementName=tbRole, Path=Text}"
                         Value="2">

                <!--Библиотекарь-->
                <Setter Property="Visibility" Value="Visible"/>

            </DataTrigger>

        </Style.Triggers>
    </Style>
</ResourceDictionary>