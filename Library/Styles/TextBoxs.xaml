        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MaxLength" Value="50"/>
        <Setter Property="SpellCheck.IsEnabled" Value="True"/>

        <Setter Property="Template">

            <Setter.Value>
